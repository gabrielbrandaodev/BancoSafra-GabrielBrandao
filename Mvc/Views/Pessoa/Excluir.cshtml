@model Negocios.ViewModels.PessoaViewModel

@{
    ViewBag.Title = "Excluir Pessoa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Excluir</h2>

@if (ViewBag.ErrosValidacao != null)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var erro in ViewBag.ErrosValidacao)
                {
                <li> @erro.ErrorMessage </li>
            }
        </ul>
    </div>
}

      

<h3>Deseja realmente excluir esta pessoa?</h3>
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DataDeNascimento)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DataDeNascimento)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Celular)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Celular)
        </dd>

    </dl>

    @using (Html.BeginForm("Excluir", "Pessoa", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="hidden">@Html.EditorFor(x => x.PessoaId)</div>
        <div class="hidden">@Html.EditorFor(x => x.Nome)</div>
        <div class="hidden">@Html.EditorFor(x => x.DataDeNascimento)</div>
        <div class="hidden">@Html.EditorFor(x => x.Email)</div>
        <div class="hidden">@Html.EditorFor(x => x.Celular)</div>
        <div class="form-actions no-color">
            <input type="submit" value="Excluir" class="btn btn-default" /> |
            @Html.ActionLink("Voltar", "Listar")
        </div>
    }
</div>
