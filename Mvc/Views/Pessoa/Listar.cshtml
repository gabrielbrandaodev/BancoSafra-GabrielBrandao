@model ICollection<Negocios.ViewModels.PessoaViewModel>

@{
    ViewBag.Title = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="table-responsive col-md-12">

    <div class="row">
        <div class="col-md-9">
            <h2>Listar</h2>
        </div>
        
        <div class="col-md-3">
            <a href="/Pessoa/Cadastrar" class="btn btn-primary pull-right h2"> Cadastrar </a>
        </div>
    </div>

    <table class="table table-striped" cellpadding="0" cellspacing="0">
        <thead>
            <tr>
                <td> Nome </td>
                <td> E-mail </td>
                <td> Celular </td>
                <td> Data de Nascimento </td>
                <td>  </td>
            </tr>
        </thead>
        <tbody>
            @foreach (var pessoa in Model)
            {
                <tr>
                    <td> @pessoa.Nome </td>
                    <td> @pessoa.Email </td>
                    <td> @pessoa.Celular </td>
                    <td> @pessoa.DataDeNascimento.ToString("dd/MM/yyyy") </td>
                    <td class="actions">
                        <a href="/Pessoa/Editar/@pessoa.PessoaId" class="btn btn-default btn-xs"> Editar </a>
                        <a href="/Pessoa/Excluir/@pessoa.PessoaId" class="btn btn-danger btn-xs"> Excluir </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

